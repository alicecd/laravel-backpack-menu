{
    "name": "novius/laravel-menu",
    "description": "Manages the editing and rendering of menus",
    "keywords": [
        "Novius",
        "Laravel"
    ],
    "type": "library",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Novius Agency",
            "email": "team-developpeurs@novius.com",
            "homepage": "http://novius.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "laravel/framework": "~5.4.0|~5.5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.5.0",
        "phpunit/phpunit": "~5.7",
        "orchestra/testbench": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Novius\\Menu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Novius\\Menu\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint" : [
            "php-cs-fixer fix --dry-run --config .php_cs -vv --diff  --allow-risky=yes"
        ],
        "test" : [
            "phpunit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novius\\Menu\\MenuServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
